@model InsuranceAgency.Models.PaymentClaim

@{
    ViewData["Title"] = "Payment Claim Details";
}

<h1>Payment Claim Details</h1>

<div>
    <h4>Claim</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Claim Date</dt>
        <dd class="col-sm-10">@Model.ClaimDate.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.ClaimStatus</dd>

        <dt class="col-sm-2">Claim Amount</dt>
        <dd class="col-sm-10">@Model.ClaimAmount</dd>

        <dt class="col-sm-2">Client Bank Account</dt>
        <dd class="col-sm-10">@Model.ClientBankAccount</dd>

        <dt class="col-sm-2">Policy</dt>
        <dd class="col-sm-10">@Model.Policy.Type</dd>
    </dl>
    <a asp-action="ClientPaymentClaims" class="btn btn-secondary">Back</a>
</div>
