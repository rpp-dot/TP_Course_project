@model InsuranceAgency.Models.Policy

@{
    ViewData["Title"] = "Детали полиса";
}

<h1>Детали полиса</h1>

<div>
    <h4>Полис</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Тип</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Дата начала</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-2">Дата окончания</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-2">Премия</dt>
        <dd class="col-sm-10">@Model.PremiumAmount</dd>

        <dt class="col-sm-2">Коэффициент платежа</dt>
        <dd class="col-sm-10">@Model.PaymentCoef</dd>

        <dt class="col-sm-2">Статус</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Объект страхования</dt>
        <dd class="col-sm-10">@Model.InsuranceObject.Type</dd>

        <dt class="col-sm-2">Агент</dt>
        <dd class="col-sm-10">@Model.InsuranceAgent.Email</dd>
    </dl>
    <a asp-action="ClientPolicies" class="btn btn-secondary">Назад</a>
</div>
